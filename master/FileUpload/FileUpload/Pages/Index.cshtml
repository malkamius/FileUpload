    const $fileSelector = $('#FileSelector');
    const $fileList = $('#file-list');
    const $removeButton = $('#remove-button');

    $fileSelector.on('change', function (e) {
        var files = $fileSelector.get(0).files;


        for (var i = 0; i < files.length; i++) {
            var item = files[i];
            const $li = $('<li>')
                .text(item.name)
